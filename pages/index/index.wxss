.container{
  padding-top: 100rpx;
}


/* 轮播图 */

.slide-image {
  width: 750rpx;
  height: 340rpx;
}

/* 导航菜单 */

.menus {
  display: flex;
  justify-content: space-around;
}

.menus {
  margin: 20rpx 0;
}

.menus image {
  width: 128rpx;
  height: 140rpx;
}

/* 楼层 */

.floor_title {
  margin: 20rpx 0;
  background: #f5f5f5;
}

.floor_title image {
  padding-top: 40rpx;
  width: 100%;
  height: 60rpx;
}

/* 楼层内容 */

.floor_content {
  margin: 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.floor_contnet_left image {
  width: 232rpx;
  height: 386rpx;
}

.floor_contnet_right {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-left: 10rpx;
}

.floor_contnet_right image {
  width: 233rpx;
  height: 188rpx;
}
