.search {
  padding: 20rpx;
  background: #efefef;
}

.search_input {
  display: flex;
  align-items: center;
  border-radius: 2px;
  font-size: 14px;
  color: #666;
  height: 60rpx;
  padding: 0 20rpx;
  background: #fff;
}

.search_input icon {
  padding-right: 10rpx;
}

/* tab栏 */

.tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  border-bottom: 1px solid #efefef;
}

.active {
  color: #ff2d4a;
}

/* 商品 */



.goods_item {
  display: flex;
  /* justify-content: space-between; */
  padding: 20rpx;
  border-bottom: 1px solid #efefef;
}
/*flex-shrink:0;声明flex内部元素宽度不会被挤压*/
.goods_item image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.goods_right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  font-size: 14px;
  color: #666;
}
.goods_title{
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods_price{
  color: #ff2d4a;
}
.goods_price text{
  font-size: 20px;
}
